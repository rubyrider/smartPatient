<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>

  <div class="form-inputs">
    <%= f.input :user_name, required: true, autofocus: true %>
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name, required: true, autofocus: true %>
    <%= f.input :age, required: true, autofocus: true %>
    <%= f.select :gender, ['Male', 'Female'] ,required: true, autofocus: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
